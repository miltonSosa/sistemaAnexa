{% block dataAdmin %}
	<div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Agregar Cuota </div>
    <!-- Table -->
    <div class="panel-body">

      {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group col-md-12">
