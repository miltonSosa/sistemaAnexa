{% block dataAdmin %}
    <div class="panel panel-primary">
      <!-- Default panel contents -->
        <div class="panel-heading">Editar Alumno ~ {{alumno.nombre}} {{alumno.apellido}}</div>
      <!-- Table -->
        <div class="panel-body">

   {# {{ form_start(edit_form) }}
