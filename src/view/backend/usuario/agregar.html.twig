{% extends 'backend/index.html.twig' %}
{% block title %} Administracion | Usuario | Agregar{% endblock %}

{% block dataAdmin %}
    	<div class="panel panel-primary">
          <!-- Default panel contents -->
          <div class="panel-heading">Agregar Usuario</div>
          <!-- Table -->
          <div class="panel-body">
            <form action="{{URL.backend_usuario_agregar}}" method="post">
              <input type="hidden" name="token" value="{{token}}">
              <div class="form-group">
                <div class="col-md-4">
                  <label for="username">Nombre de Usuario</label>
                  <input type="text" class="form-control" id="username" name="username" placeholder="Nombre de Usuario" required>
                </div>
                <div class="col-md-4">
                  <label for="password">Contrase&ntilde;a</label>
                  <input type="password" class="form-control" id="password" name="pass" placeholder="ContraseÃ±a" required>
                </div>
                <div class="col-md-4">
                  <label for="rol">Rol</label>
                  <select class="form-control" name="rol" required>
                    {% for rol in roles %}
                      <option value="{{rol.id}}">{{rol.nombre}}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
              <button type="submit" class="btn btn-primary col-md-12">Agregar Usuario</button>
            </form>
          </div>
      </div>
