{% extends 'base.html.twig' %}

{% block body %}
    <h1>Alumno list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Borrado</th>
                <th>Tipodni</th>
                <th>Dni</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Fechanacimiento</th>
                <th>Sexo</th>
                <th>Calle</th>
                <th>Numero</th>
                <th>Ciudad</th>
                <th>Provincia</th>
                <th>Codigopostal</th>
                <th>Pais</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Fechaingreso</th>
                <th>Fechaegreso</th>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>Fechaalta</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td><a href="{{ path('alumno_show', { 'id': alumno.id }) }}">{{ alumno.id }}</a></td>
                <td>{% if alumno.borrado %}Yes{% else %}No{% endif %}</td>
                <td>{{ alumno.tipoDNI }}</td>
                <td>{{ alumno.dni }}</td>
                <td>{{ alumno.apellido }}</td>
                <td>{{ alumno.nombre }}</td>
                <td>{% if alumno.fechaNacimiento %}{{ alumno.fechaNacimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ alumno.sexo }}</td>
                <td>{{ alumno.calle }}</td>
                <td>{{ alumno.numero }}</td>
                <td>{{ alumno.ciudad }}</td>
                <td>{{ alumno.provincia }}</td>
                <td>{{ alumno.codigoPostal }}</td>
                <td>{{ alumno.pais }}</td>
                <td>{{ alumno.telefono }}</td>
                <td>{{ alumno.email }}</td>
                <td>{% if alumno.fechaIngreso %}{{ alumno.fechaIngreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if alumno.fechaEgreso %}{{ alumno.fechaEgreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ alumno.latitud }}</td>
                <td>{{ alumno.longitud }}</td>
                <td>{% if alumno.fechaAlta %}{{ alumno.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('alumno_show', { 'id': alumno.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('alumno_edit', { 'id': alumno.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alumno_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
